<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sandsara" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>

        <item name="bottomSheetIconsColor">@color/black</item>
        <item name="bottomSheetDividerColor">@color/black</item>
        <item name="bottomSheetPrimaryColor">@color/black</item>
        <item name="bottomSheetContentColor">@color/black</item>
        <item name="bottomSheetHighlightColor">@color/teal_700</item>
        <item name="bottomSheetBackgroundColor">@color/white</item>
<!--        <item name="bottomSheetDividerColor">@color/customDividerColor</item>-->
<!--        <item name="bottomSheetIconsColor">@color/customIconsColor</item>-->
<!--        <item name="bottomSheetCornerRadius">@dimen/customCornerRadius</item>-->
        <item name="bottomSheetCornerFamily">rounded</item>
    </style>

</resources>